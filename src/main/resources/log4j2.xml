<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>

    <!-- Set append to true to have CSV files persistent across multiple runs  -->

    <File name="time-taken" fileName="time-taken.csv" append="true">
       <PatternLayout pattern="%d,%m%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Logger name="time-taken" level="info">
      <AppenderRef ref="time-taken"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>

