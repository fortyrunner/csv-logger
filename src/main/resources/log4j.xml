<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %p %t %c{1} - %m%n"/>
    </layout>
  </appender>


  <appender name="tt-appender" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="time-taken.csv"/>
    <param name="MaxFileSize" value="100KB"/>
    <param name="MaxBackupIndex" value="1"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d,%m%n"/>
    </layout>
  </appender>

  <logger name="time-taken">
    <level value="info"/>
    <appender-ref ref="tt-appender"/>
  </logger>

  <root>
    <priority value="info"/>
    <appender-ref ref="console"/>
  </root>

</log4j:configuration>

